@model IEnumerable<VetClinicSystem.Models.PetProfile>

<h1>Pet Profiles</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Profile</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Pet</th>
            <th>Vet Notes (preview)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Pet?.Name</td>
                <td>
                    @{
                        var preview = (item.VetNotes ?? "");
                        if (preview.Length > 50)
                        {
                            preview = preview.Substring(0, 50) + "...";
                        }
                    }
                    @preview
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

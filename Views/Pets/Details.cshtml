@model VetClinicSystem.Models.Pet

<h1>Pet Details</h1>

<dl class="row">
    <dt class="col-sm-2">Microchip</dt>
    <dd class="col-sm-10">@Model.MicrochipId</dd>

    <dt class="col-sm-2">Name</dt>
    <dd class="col-sm-10">@Model.Name</dd>

    <dt class="col-sm-2">Species</dt>
    <dd class="col-sm-10">@Model.Species</dd>

    <dt class="col-sm-2">Vet Doctor</dt>
    <dd class="col-sm-10">@Model.VetDoctor?.Name</dd>
</dl>

<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
<a asp-action="Index" class="btn btn-secondary">Back</a>

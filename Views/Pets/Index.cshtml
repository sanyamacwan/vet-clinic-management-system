@model IEnumerable<VetClinicSystem.Models.Pet>

<h1>Pets</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Add New Pet</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Microchip</th>
            <th>Name</th>
            <th>Species</th>
            <th>Vet Doctor</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.MicrochipId</td>
                <td>@item.Name</td>
                <td>@item.Species</td>
                <td>@item.VetDoctor?.Name</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

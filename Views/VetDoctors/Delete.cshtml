@model VetClinicSystem.Models.VetDoctor

@{
    ViewData["Title"] = "Delete Vet Doctor";
}

<h1>Delete Vet Doctor</h1>

<h3>Are you sure you want to delete this doctor?</h3>

<hr />
<dl class="row">
    <dt class="col-sm-2">Name</dt>
    <dd class="col-sm-10">@Model.Name</dd>

    <dt class="col-sm-2">Specialty</dt>
    <dd class="col-sm-10">@Model.Specialty</dd>
</dl>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>
